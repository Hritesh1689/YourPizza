<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="pizzasName"
            type="String" />

        <variable
            name="sizeName"
            type="String" />

        <variable
            name="sizePrice"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/add_cart_button">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/pizza_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:text="@{pizzasName}"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pizza_image" />

                <ImageView
                    android:id="@+id/pizza_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <AutoCompleteTextView
                    android:id="@+id/size_suggestion_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="24dp"
                    android:backgroundTint="#acacac"
                    android:text="@{sizeName}"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/iv_rupee"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="15sp"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pizza_name" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_rupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/size_suggestion_textview"
                    app:layout_constraintEnd_toStartOf="@+id/et_product_price"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/size_suggestion_textview"
                    app:layout_constraintTop_toTopOf="@id/size_suggestion_textview"
                    app:srcCompat="@drawable/rupee_image" />

                <TextView
                    android:id="@+id/et_product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="0.5"
                    android:backgroundTint="#acacac"
                    android:inputType="numberDecimal"
                    android:maxLength="18"
                    android:text="@{sizePrice}"
                    android:textColor="#5a5a5a"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/size_suggestion_textview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iv_rupee"
                    app:layout_constraintTop_toTopOf="@id/size_suggestion_textview" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
            android:id="@+id/add_cart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="ADD TO CART"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>